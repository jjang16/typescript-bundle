{
  "name": "typescript-bundle",
  "version": "1.0.14",
  "description": " A zero configuration bundling tool for TypeScript.",
  "scripts": {
    "clean": "smoke-task clean",
    "amd-loaders": "npm install && node tasks amd_loaders",
    "build": "npm install && smoke-task build",
    "pack": "npm install && smoke-task pack",
    "spec": "npm install && smoke-task spec",
    "test": "npm run spec",
    "watch": "npm install && smoke-task watch",
    "install-cli": "npm install && smoke-task install_cli",
    "uninstall-cli": "npm install && smoke-task uninstall_cli"
  },
  "bin": {
    "tsc-bundle": "./tsc-bundle"
  },
  "preferGlobal": true,
  "keywords": [
    "typescript",
    "bundle"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sinclairzx81/typescript-bundle"
  },
  "author": "sinclairzx81",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^8.0.7",
    "shx": "^0.2.2",
    "smoke-task": "^1.0.2",
    "smoke-run": "^1.0.0",
    "typescript": "^3.3.3"
  }
}
